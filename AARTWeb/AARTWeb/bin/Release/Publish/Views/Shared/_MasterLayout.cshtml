<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AART</title>

    @*<link href="~/Themes/css/aart_style.css" rel="stylesheet" />*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
    <style type="text/css">
        .navbar-inverse {
            background-color: #373f6d;
        }

        .forgot-password-btn, .change-password-layout, #adduser {
            margin-top: 20px;
        }

        #user-tools {
            float: right;
            padding: 0;
            margin: 0 0 0 20px;
            font-weight: 300;
            font-size: 11px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            text-align: right;
            color: #ffc;
        }
    </style>

</head>
<body>

    <div class="body-content">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("AART", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>

                <div id="user-tools">
                    Welcome,<strong>@Session["UserName"] </strong>.

                    @Html.ActionLink("Change Password", "ChangePassword", "Account")
                    /
                    @Html.ActionLink("Logout", "Logout", "Account")
                </div>

            </div>
        </div>
        <div style="margin-left: 10%;margin-right: 10%;">
            @RenderBody()
            </div>
            <footer>
                <p>&copy; @DateTime.Now.Year - AART</p>
            </footer>


        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
