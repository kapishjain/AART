@model AARTWeb.Models.RoleModel
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>AddRole</h2>

<div class="row">
    <div class="col-md-8">
        <section id="adduser">
            @using (Html.BeginForm("PostRole", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">

                    @*<div>
                            @Html.ActionLink("Home", "Index", "Home")
                        </div>*@
                    @if (Model != null)
                    {
                        <div>
                            @if (Model.IsSuccess)
                            {
                                <span class="text-success">@Html.DisplayFor(m => m.Message)</span>
                            }

                        </div>

                        <div>
                            @if (Model.Warning)
                            {
                                <span class="text-danger">@Html.DisplayFor(m => m.Message)</span>
                            }

                        </div>
                    }
                    @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RoleName,
                        new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RoleName,
                        "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RoleDescription, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RoleDescription,
                        new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RoleDescription,
                        "", new { @class = "text-danger" })
                    </div>
                </div>

                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.IsStatus)
                            @Html.LabelFor(m => m.Status)
                        </div>
                    </div>
                </div>

                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit"
                               value="Add Role" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>


